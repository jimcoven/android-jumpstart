<?xml version="1.0" encoding="utf-8"?>
<com.jattcode.common.view.SwipeBackLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="#09000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />

        <!--<com.liuguangqiang.progressbar.CircleProgressBar-->
            <!--android:id="@+id/progressbar1"-->
            <!--android:layout_width="45dp"-->
            <!--android:layout_height="45dp"-->
            <!--app:background_color="@android:color/transparent"-->
            <!--app:progress_color="#99FFFFFF"-->
            <!--app:stroke_width="2dp" />-->

        <ImageView
            android:id="@+id/close_button"
            android:background="@mipmap/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            />

        <com.jattcode.common.view.IndicatorView
            android:id="@+id/indicator"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="32dp"
            />

    </RelativeLayout>


</com.jattcode.common.view.SwipeBackLayout>